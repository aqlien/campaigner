= simple_form_for @survey do |f|
  = f.association :event, collection: Event.all.order(:name), prompt: "Choose an Event", input_html: {class: 'form-control'}
  = f.simple_fields_for :survey_questions do |q|
    = q.input :text
    = q.input :question_type
    = q.input :order
  .actions
    = f.button :submit, class: 'btn btn-primary'
