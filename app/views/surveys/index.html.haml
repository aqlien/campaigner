%h1 Listing surveys

%table
  %thead
    %tr
      %th User
      %th Event
      %th
      %th
      %th

  %tbody
    - @surveys.each do |survey|
      %tr
        %td= survey.user.email
        %td= survey.event.name
        %td
          = link_to survey, title: 'Show', class: 'icon' do
            = fa_icon 'eye'
          = link_to edit_survey_path(survey), title: 'Edit', class: 'icon' do
            = fa_icon 'wrench'
          = link_to survey, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Destroy', class: 'icon' do
            = fa_icon 'times'

%br

= link_to 'New Survey', new_survey_path
