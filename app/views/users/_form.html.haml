= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message

  %fieldset
    = f.label :email, 'Email Address'
    = f.text_field :email
  %fieldset
    = f.label :name, 'Name'
    = f.text_field :name

  .actions
    = f.submit 'Save'
