%h1 Listing users

%table
  %thead
    %tr
      %th Name
      %th Email
      %th Admin?
      %th.actions

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= user.admin? ? 'Y' : 'N'
        %td
          = link_to 'Show', user
          = link_to 'Edit', edit_user_path(user)
          = link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New User', new_user_path
