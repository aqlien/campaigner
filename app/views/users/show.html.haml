%p
  %b Name:
  = @user.name
%p
  %b Short name:
  = @user.short_name

%p
  %b Email:
  = @user.email

- if @user.organization.present?
  %p
    %b Organization:
    = @user.organization.display_name

%p
  %b Completed Surveys:
  =render partial: 'surveys', locals: {user: @user}

= link_to 'Edit', edit_user_path(@user)
